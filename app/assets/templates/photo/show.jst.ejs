<img src="<%= photo.escape('url') %>"/>

<h1 class='photo-title'>
  <% if (photo.escape('title').length > 0) { %>
    <%= photo.escape('title') %>
  <% } %>
</h1>


<p class='photo-description'>
  <% if (photo.escape('description').length > 0) { %>
    <%= photo.escape('description') %>
  <% } %>
</p>


<% if (user.escape('username').length > 0 && photo.escape('user_id') != CURRENTUSER.id) { %>
  <h4>
    posted by:
    <a href="#user/<%= user.get('id') %>">
      <%= user.escape('username') %>
    </a>
  </h4>
<% } %>
<div class="edit-buttons">
  <!-- <button type="button" class="fill-screen btn btn-lrg btn-default">Fullscreen</button> -->
  <% if (CURRENTUSER.id === photo.get('user_id')) { %>
    <% if (photo.escape('title').length > 0) { %>
      <button type="button" class="change-title btn btn-lrg btn-info">Edit Title</button>
    <% } else { %>
      <button type="button" class="change-title btn btn-lrg btn-primary">Add Title</button>
    <% } %>

    <% if (photo.escape('description').length > 0) { %>
      <button type="button" class="change-description btn btn-lrg btn-info">Edit Description</button>
    <% } else { %>
      <button type="button" class="change-description btn btn-lrg btn-primary">Add Description</button>
    <% } %>

    <button type="button" class="btn btn-lrg btn-danger">Delete Photo</button>
  <% } %>
</div>
