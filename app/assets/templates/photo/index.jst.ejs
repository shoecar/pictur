<div class="row">
  <div class="col-xs-12">
    <form class="sort-form" action="index.html" method="post">
      <select class="form-control sort-type">
        <option class="id">time posted</option>
        <option class="num_likes">number of likes</option>
        <option class="num_comments">number of comments</option>
      </select>

      <div class="btn-group-vertical sort-buttons" data-toggle="buttons">
        <label class="btn btn-primary" id="sort-asc">
          <input type="radio" id="ascend" name="sort-order" autocomplete="off" checked><i class="fa fa-sort-asc"></i>
        </label>
        <label class="btn btn-primary" id="sort-des">
          <input type="radio" id="descend" name="sort-order" autocomplete="off"><i class="fa fa-sort-desc"></i>
        </label>
      </div>

      <button type="button" name="button" class="sort-submit btn btn-default">Sort</button>
    </form>
  </div>
</div>

<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix"></div>
