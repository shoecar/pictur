<!DOCTYPE html>
<html>
<head>
  <title>Pictur</title>
  <link rel="icon" type="image/png" href="<%= asset_path('favicon.png') %>">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

  <% if current_user %>
    <%= button_to("Sign Out", session_url, method: :delete) %>
  <% end %>

  <%= yield %>

</body>
</html>
